<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order date</th>
      <th>User</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_date %></td>
        <td><%= order.user %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Show', order %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<br>
<h2>Paid Bookings</h2>

 <table id="customers">
   <tr>
      <th>Court Name</th>
      <th>Start Time</th>
      <th>Duration(hour)</th>
    </tr>
   
   <% @bookings.each do |booking| %>
   <% if booking.is_booked %>
      <tr>
        <% @courts.each do |court| %>
        <% if booking.court_id == court.id %>
          <td><%= court.court_name %></td>
        <% end %>
       <% end %>
      
      <td><%= booking.start_time %></td>
      <td><%= booking.duration %></td>
      </tr>
    <% end %>
   <% end %>
   <tr></tr>
   </table>
